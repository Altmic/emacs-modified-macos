## GNU Emacs and this distribution version number
EMACSVERSION=25.1
EMACSPATCHLEVEL=1
DISTVERSION=4

## Extensions version numbers
ESSVERSION=16.10
AUCTEXVERSION=11.89
ORGVERSION=9.0.3
POLYMODEVERSION=$(shell git -C $(if ${MAKELEVEL},..,)/polymode show -s --format="%ci" HEAD | cut -d " " -f 1 -)
MARKDOWNMODEVERSION=$(shell git -C $(if ${MAKELEVEL},..,)/markdown-mode describe --tags)
EXECPATHVERSION=$(shell git -C $(if ${MAKELEVEL},..,)/exec-path-from-shell describe --tags | cut -d "-" -f 1-2 -)
PSVNVERSION=$(shell svn -v status $(if ${MAKELEVEL},..,)/emacs-svn/psvn.el | cut -d " " -f 16 -)

### No modification should be necessary beyond this point

## Version strings and file names
VERSION=${EMACSVERSION}$(if ${EMACSPATCHLEVEL},-${EMACSPATCHLEVEL},)-modified-${DISTVERSION}
DISTNAME=Emacs-${VERSION}
DMGFILE=Emacs-${EMACSVERSION}$(if ${EMACSPATCHLEVEL},-${EMACSPATCHLEVEL},)-universal.dmg

## DMG mount point
VOLUME=/Volumes

## GitHub repository and authentication
REPOSURL=https://api.github.com/repos/vigou3/emacs-modified-macos
OAUTHTOKEN=$(shell cat ~/.github/token)
